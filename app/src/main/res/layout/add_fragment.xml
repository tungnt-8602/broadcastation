<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backToHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space"
        android:layout_marginTop="@dimen/space"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/space"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/add_fragment"
        style="@style/Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/add_remote"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/remote_option"
        app:layout_constraintEnd_toStartOf="@id/addedRemote"
        app:layout_constraintStart_toEndOf="@id/backToHome"
        app:layout_constraintTop_toTopOf="@id/backToHome" />

    <ImageView
        android:id="@+id/addedRemote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space"
        android:layout_marginEnd="@dimen/space"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/space"
        android:src="@drawable/ic_added"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/remote_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/backToHome"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/space_large"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/remote_option"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/save_remote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_large"
        android:text="@string/save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="@dimen/space_large"/>

</androidx.constraintlayout.widget.ConstraintLayout>